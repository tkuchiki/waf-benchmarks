user             <%= node[:nginx][:user] %>;
worker_processes <%= node[:nginx][:worker_processes] %>;

error_log <%= ENV["PROJECT_ROOT"] %>/var/log/nginx/error.log;
pid       <%= ENV["PROJECT_ROOT"] %>/var/run/nginx.pid;

events {
    worker_connections <%= node[:nginx][:worker_connections] %>;
}

http {
    include      <%= ENV["PROJECT_ROOT"] %>/config/nginx/mime.types;
    default_type application/octet-stream;

    log_format main '$remote_addr - $remote_user [$time_local] "$request" '
                    '$status $body_bytes_sent "$http_referer" '
                    '"$http_user_agent" "$http_x_forwarded_for"';

    log_format ltsv 'host:$remote_addr\t'
                    'user:$remote_user\t'
                    'time:$time_iso8601\t'
                    'method:$request_method\t'
                    'uri:$request_uri\t'
                    'protocol:$server_protocol\t'
                    'status:$status\t'
                    'size:$body_bytes_sent\t'
                    'request_time:$request_time\t'
                    'upstream_response_time:$upstream_response_time\t'
                    'upstream_addr:$upstream_addr\t'
                    'referer:$http_referer\t'
                    'user_agent:$http_user_agent\t';

    access_log <%= ENV["PROJECT_ROOT"] %>/var/log/nginx/access.log  ltsv;

    sendfile          on;
    keepalive_timeout 65;

    gzip <%= node[:nginx][:gzip] %>;
    gzip_http_version 1.1;
    gzip_proxied      any;
    gzip_disable      "MSIE [1-6]\.";
    gzip_vary         on;
    gzip_types text/css
               text/plain
               text/javascript
               application/javascript
               application/x-javascript
               application/json;
    gzip_comp_level 1;
    gzip_min_length 128;

    include <%= ENV["PROJECT_ROOT"] %>/config/nginx/conf.d/*.conf;
}
